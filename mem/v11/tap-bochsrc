#ne2k: enabled=1,ioaddr=0x300, irq=10, mac=b0:c4:20:00:00:00, ethmod=tuntap, ethdev=/dev/net/tun, script=tun-tunconfig.conf
ne2k: enabled=1,ioaddr=0x300, irq=10, mac=b0:c4:20:00:00:00, ethmod=tuntap, ethdev=/dev/net/tap, script=tap.conf



#ne2k: enabled=1, ioaddr=0x310, irq=10, mac=ce:a2:22:ec:29:a9, ethmod=tuntap, ethdev=/dev/net/tap4, script="tunconfig.sh" 

