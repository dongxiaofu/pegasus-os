floppya: 1_44="a.img", status=inserted

ata0: enabled=1, ioaddr1=0x1f0, ioaddr2=0x3f0, irq=14
ata0-master: type=disk, path="80m.img", mode=flat
#ata0-slave: type=disk, path="80n.img", mode=flat

